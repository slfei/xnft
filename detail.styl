.share{
    display:inline-block; 
    cursor:pointer;
 }      
.share p{
    height:2px;
    width:18px;
    background:#3c3c3c;
    border-radius:1px;
}
.share p:nth-child(2){
    width:15px;
    margin:3px 0;
}
.share p:nth-child(3){
    width:13px;
}

.pull-down{
    width:89px;
    height:99px;
    border-top: none;
    background:#fff;
    position:fixed;
    top:51px;
    right:13px;
    text-align:center;
 	font-size:14px;
 	color:#797979;
 	z-index:8888 !important;
    border: 1px solid #dedede;
    border-top:none;
    border-radius: 0 0 2px 2px
   
}
.pull-down.playNone{
    display: none;
}
.pull-down.active{
    display: block;
}
.pull-down li{
    text-align: center;
    height:17px !important;
    width: 100%;
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.pull-down li:first-child{
    margin:19px 0 26px 0;

}

.pull-down li img{
    width: 15px;
    height: 15px;
    vertical-align: middle;
    margin-right: 5px;
}
 .pull-down .collect span{
    display: inline-block;
    width: 15px;
    height: 15px;
    margin-right: 5px;
    background: #fff  url(/static/img/course/collect.png) no-repeat center;
    background-size:15px 15px;
 } 
 .pull-down  .collect .active{
    background: #fff url(/static/img/course/yellowstar.png) no-repeat center;
    background-size:15px 15px;
 }
 
.pull-down .Share span{
    display: inline-block;
    width: 15px;
    height: 15px;
    margin-right: 5px;
    background: #fff  url(/static/img/course/share.png) no-repeat center;
    background-size:15px 15px;
 }  

.ion-android-star,.ion-android-share-alt{
    color:#797979;
    margin-right:5px;
    font-size:16px;     
}
.pull-right .icon-try-listen{
    display: inline-block;
    width:40px;
    height:16px;
    background: url(/static/img/icon/try-listen.png);
    background-size:40px 16px;
    }
  

