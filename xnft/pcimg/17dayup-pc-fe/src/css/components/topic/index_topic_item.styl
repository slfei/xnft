
.hot-question
    background #fff
    width 379px
    padding 20px
    margin-right 20px
    float left
    .from-topic-list
        margin-bottom 16px
        text-align center
    .from-topic
        display inline-block
        background $color_primary
        color #fff
        line-height 24px
        padding 0 10px
    .avatar
        width 36px
        heihgt 36px
        border-radius 50%
    .bottom
        line-height 36px
        .pull-left
            .name
                &:hover
                    text-decoration underline !important
        .pull-right
            font-size 12px
            &:hover
                text-decoration underline !important
        .num
            color $color_primary

    .media-body
        .description
            width 100%
            height 40px
            display -webkit-box
            text-overflow ellipsis
            overflow hidden
            -webkit-box-orient vertical
            -webkit-line-clamp 2
            &:hover
                text-decoration underline !important
