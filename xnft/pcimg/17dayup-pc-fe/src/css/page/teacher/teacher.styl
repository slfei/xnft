@import "../../components/pagination/pagination.styl"
.teacher-main-center
    background #f5f5f5
    .teacher-center
        width 1170px
        padding 20px
        margin 0px auto
        .course_active
            color #238FFF
        .border-active
            border-bottom 3px solid #098bf3
        .course_listen
            padding-left 21px
            label
                left 0
                position absolute
                width 16px
                height 16px
                background url(/build/img/icon/check.png) no-repeat
                background-size 100%
        .course_listen_active
            background url(/build/img/icon/checked.png) no-repeat !important
            background-size 100% !important
        .teacher-header
            color #fff
            background -webkit-linear-gradient(top, #01365E, #B3C1BA)
            background -moz-linear-gradient(top, #01365E, #B3C1BA)
            background -ms-linear-gradient(top, #01365E, #B3C1BA)
            background -o-linear-gradient(top, #01365E, #B3C1BA)
            text-align center
            padding 32px
            .teacher_avator
                img
                    width 104px
                    height 104px
                    border-radius 100%
            .teacher_name
                font-size 20px
                margin-top 8px
            .scope
                position relative
                font-size 14px
                margin-top 20px
                padding-left 18px
                &:before
                    content ""
                    position absolute
                    background url('/build/img/icon/scope.png')
                    background-size 100%
                    width 18px
                    height 18px
                    margin-left -20px
                    top -1px
            .honor
                font-size 14px
                margin-top 15px
            .teacher-desc
                font-size 16px
                margin-top 20px
                    
        .main-teacher
            margin 25px auto
            .teacher-navbar
                padding 20px 0px 44px
                .nav-a
                    font-size 18px
                    font-weight 500
                    width 865px
                    text-align center
                    margin 0 auto
                    a
                        color #333
                        padding 20px
                        margin-right 99px
                    .about-us
                        margin-right 0px
        .my-pagination
            background #f5f5f5
            padding-top 4px
