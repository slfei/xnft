.all-teachers
    width 100%
    padding 0px 10px 30px
    .each-teacher
        width 50%
        padding 20px 25px
        .teacher-img
            float left
            img
                width 100px
                height 100px
                border-radius 100%
        .teacher-desc
            margin-left 25px
            margin-top 10px
            h4
                font-size 16px
            p
                width 350px
                font-size 12px
                line-height 21px
                word-break break-all
                word-wrap break-word
                margin-top 25px
    .each-teacher:hover
        box-shadow  2px 0px 13px #ededed
