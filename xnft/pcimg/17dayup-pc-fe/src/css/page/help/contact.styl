@import '../../config.styl'
.contact
    a
        color $color_primary !important
.help-contact
    padding 30px 0 60px 0
    font-size $font_large
    a:hover,a:focus
        text-decoration none
        color $color_primary !important
    .left
        width 180px
        background #fff
        margin-right 30px
        ul
            li
                padding 10px 0 10px 20px
                margin-bottom 0
                a
                    color #333
                    font-size 16px
                dl
                    margin 0
                    dt
                        color #333
                        font-weight normal
                    dd
                        margin-top 10px
                        padding-left 16px
                        a
                            color #666
                            font-size 14px
            li ~ li
                border-top 1px solid #eee
    .right
        &
            width 970px
            background #fff
            padding-top 30px
            padding-bottom 30px
            min-height $min_height_normal
        .title
            font-weight bold
            border-bottom 1px solid #dedede
            padding 0 32px 27px 32px
        .content
            padding 0 32px
            .serve_left
                margin-top 30px
                width 420px
                float left
                img
                    width 130px
            .serve_right
                margin-top 30px
                width 484px
                height 300px
                float right
                #amap
                    height 300px
            .markets
                padding 50px 0
            .serve-content
                div
                    margin-bottom 20px
                    .concat_address
                        margin-right 10px
                        float left
                        display block
                        background url('/build/img/help/address.png') no-repeat
                        background-size 100%
                        height 22px
                        width 14px
                        background-position center
                    .concat_phone
                        margin-right 10px
                        float left
                        display block
                        background url('/build/img/help/phone.png') no-repeat
                        background-size 100%
                        height 22px
                        width 14px
                        background-position center
                    .concat_email
                        margin-right 10px
                        float left
                        display block
                        background url('/build/img/help/email.png') no-repeat
                        background-size 100%
                        height 22px
                        width 14px
                        background-position center
                    .concat_wx
                        margin-right 10px
                        float left
                        display block
                        background url('/build/img/help/wx.png') no-repeat
                        background-size 100%
                        height 22px
                        width 14px
                        background-position center
