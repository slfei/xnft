@import "./center.styl"
@import "../../components/pagination/pagination.styl"
.user-notice
    background #fff
    .notice-tab
        position relative
        margin 0px 30px
        border-bottom 1px solid #dedede
        a
            display inline-block
            margin-right 22px
            padding 20px
            position relative
            .number-message
                    position absolute
                    top 14px
                    right 8px
                    min-width 16px
                    height 16px
                    padding 0 3px
                    text-align center
                    line-height 16px
                    background #ff1818
                    color #fff
                    font-size 12px
                    border-radius 50%
                    font-weight 400
                    display none
        .btn-sign
            position absolute
            right 0px
            top 16px
            a 
                border 1px solid #238FFF
                border-radius 4px
                color #238FFF
                font-size 12px
                padding 8px 10px
                cursor pointer
                font-weight 500
                margin-right 0
    .my-comment-reply
        .creat-time
            color #999
            padding 0px
            margin-top 18px
            margin-bottom 0px
        .each-notice
            font-size 14px
            color #333
            padding 17px 20px 8px
            background #f5f5f5
            margin 20px 30px
            a
                color #238FFF    
            .institute-area        
                .institute-logo
                    img
                        width 40px
                        height 40px
                        border-radius 100%
                        float left
                .institute-desc
                    float left
                    width 90%
                    line-height 20px
                    word-break break-all
                    word-wrap break-word
                    margin 10px 15px                        
            .my-comment
                position relative
                padding 15px
                margin 0px 53px 13px
                border-radius 5px
                .my-view
                    line-height 23px
                .message-triangle
                    position absolute
                    top -26px
                    left 30px
                    width 13px
                    height 13px
                    border 13px solid
                    border-color transparent transparent #fff transparent
            .update-date
                color #ccc
                font-size 14px
                margin-left 43px
        .msg-noreaded 
            font-weight bold
            cursor pointer