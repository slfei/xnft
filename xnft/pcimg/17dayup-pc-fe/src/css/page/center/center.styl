        position relative
        bottom -2px
        font-size 14px
        font-weight 600
        color #333
    .center-active
        color #238FFF !important
        .ion-book-outline
            width 20px
            height 20px
            background url('/build/img/center/bookHover.png') no-repeat !important
            background-size 100% !important
        .ion-paper-outline
            width 20px
            height 20px
            background url('/build/img/center/paperHover.png') no-repeat !important
            background-size 100% !important
        .ion-pricetags-outline
            width 20px
            height 20px
            background url('/build/img/center/pricetagsHover.png') no-repeat !important
            background-size 100% !important
