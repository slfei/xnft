    .border-active
        border-bottom 3px solid #238FFF
    .hide
        display none
    .no-style-btn
        color #999
        padding 6px 15px
    .center-sidebar
        width 1170px
        padding-top 20px
        margin 0px auto
        .user-info
            padding 30px 30px
            .user-avator
                position relative
                padding 0
                overflow hidden
                border-radius 50%
                font-size: 0;
                img
                    width 100px
                    height 100px
                    border 2px solid #f5f5f5
                    /*border-radius 50%*/
                    border 0
                span
                    position absolute
                    bottom 5px
                    left: 0;
                    /*left 24%*/
                    font-size $font_small
                    color #fff
                    width 100%
                    background rgba(0,0,0,.3)
                    text-align center
                    padding-top 4px
                    padding-bottom 4px
            .user-desc
                font-size 14px
                color #333
                margin-top 24px
                margin-left 20px
                .nickname
                    font-weight bold
                    margin-bottom 10px
            .teach-manage
                margin-top 40px
