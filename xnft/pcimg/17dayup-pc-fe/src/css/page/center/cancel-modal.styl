.cancel-modal
    position fixed
    top 0%
    left 0%
    display none
    background rgba(0, 0, 0, 0.6)
    width 100%
    height 100%
    z-index 999
    text-align center
    .canscroll
        height 730px
        overflow-y scroll
        .modal-content
            position absolute
            left 50%
            top 40%
            border-radius 4px
            width 400px
            height 240px
            background-color #fff
            transform translate(-50%, -50%)
            overflow hidden
            padding 7px 15px
            .close-modal
                color #ccc
                font-size 35px
                cursor pointer
            .m-title
                margin 26px 0px 40px 12px
                h2
                    font-size 18px
                    font-weight 500
            .cancel-btn
                a
                    font-size 16px
                    padding 10px 37px
                    margin 10px 0 0 0
                    cursor pointer
                .sure-btn
                    margin-right 20px
                .clear-btn
                    margin-left 20px
            .border
                border 1px solid #f5f5f5
                background #dedede
                color #333
                border-radius 4px
